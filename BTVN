Câu 1:
#include <stdio.h>
#include <conio.h>
int main() {
    int x;
    printf("Nhap gia tri x: ");
    scanf("%d", &x);

    printf("x^2 = %d\n", x * x);
    printf("x^3 = %d\n", x * x * x);
    printf("x^4 = %d\n", x * x * x * x);
}
Câu 2:
#include <stdio.h>
#include <conio.h>
int main() {
    int x;
    int y;
    int z;

    printf("Nhap ngay, thang, nam: ");
    scanf("%d %d %d", &x, &y, &z);

    printf("Hom nay la ngay: %02d/%02d/%04d", x, y, z);
}
